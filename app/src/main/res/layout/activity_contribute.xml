<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crabsofts.sharenotes.Activities.ContributeActivity">
    <include
        layout="@layout/main_tool_bar"
        android:id="@+id/toolbar">
    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/fromuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From: mohdhaider30@gmail.com"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0"
                android:layout_marginTop="10dp"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Subject :"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/subjectEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:hint="Write down the name of the subject"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0"
                android:layout_marginTop="10dp"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Contact Number :"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="phone"
                android:textSize="16sp"
                android:hint="Enter mobile no. with country code"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0"
                android:layout_marginTop="10dp"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Message :"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/messageEditText"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:textSize="16sp"
                android:hint="Write down any Message"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:background="@drawable/login_back"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:onClick="showchooser" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
